<div class="picture-container" align="center">
    <h1>Pictures</h1>
    <% if logged_in? %> 
        <%= link_to '<i class="fa fa-plus-square"></i> Add picture'.html_safe, new_picture_path %>
    <% else %>
        <p>Please <%= link_to 'log in', login_path %> to post pictures</p>
    <% end %>
    <hr>
    <% if notice %>
        <div class="alert alert-info" role="alert">
            <p><%= notice %></p>
        </div>
    <% end %>
    <div class="image-container">
        <% @pictures.each do |picture| %>
            <div class="picture-wrapper">
                <div class="picture-container">   
                    <div>
                        <%= image_tag(picture.image.url, alt: 'Image', :class => 'Image') if picture.image? %>
                    </div>
                    <div class="picture-element">
                        <%= picture.title%>
                    </div>
                    <div class="picture-element">
                        <%= picture.body %>
                    </div>
                    <div class="picture-element">
                        <% if logged_in?%>
                            <% if picture.user_id = current_user.id %>
                                <%= button_to "Delete", picture_path(picture), method: :delete, data: { confirm: "Are you sure you want to delete this article?"}, class: "btn btn-xs btn-danger" %>
                            <% end %>
                        <% end %>
                    </div>
                </div>
            </div>
        <% end %>
    </div>
</div>
