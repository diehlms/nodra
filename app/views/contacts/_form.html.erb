<div class="row">
 <div class="col-xss-12">
  <%= form_for(@contact, :html => {class: "form-horizontal", role: "form"}) do |f| %>
  <div class="form-group">
   <div class="control-label col-sm-2">
    <%= f.label :name %>
   </div>
   <div class="col-sm-6">
    <%= f.text_field :name, class: "form-control", placeholder: "First & last", autofocus: true %>
   </div>
  </div>
  <div class="form-group">
   <div class="control-label col-sm-2">
    <%= f.label :fleet %>
   </div>
   <div class="col-sm-6">
    <%= f.text_area :fleet, class: "form-control", placeholder: "Name of fleet" %>
   </div>
  </div>
  <div class="form-group">
   <div class="control-label col-sm-2">
    <%= f.label :email %>
   </div>
   <div class="col-sm-6">
    <%= f.text_area :email, rows: 1, class: "form-control", placeholder: "Email" %>
   </div>
  </div>
  <div class="form-group">
   <div class="control-label col-sm-2">
    <%= f.label :phone_number %>
   </div>
   <div class="col-sm-6">
    <%= f.text_area :phone_number, rows: 1, class: "form-control", placeholder: "(xxx) xxx-xxxx" %>
   </div>
  </div>
  <div class="form-group">
   <div class="col-sm-offset-2 col-sm-10">
    <%= f.submit class: 'btn btn-primary btn-large' %>
   </div>
  </div>
<% end %>
 </div>
</div>