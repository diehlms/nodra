<% if @event.errors.any? %>
 <h2>The following errors prevented the event from saving:</h2>
 <ul>
 <% @event.errors.full_messages.each do |msg|%>
 <li><%= msg %></li>
 <% end %>
 </ul>
<% end %>
<div class="row">
 <div class="col-xs-12">
  <%= form_for(@event, :html => {class: "form-horizontal", role: "form"}) do |f| %>
  <div class="form-group">
   <div class="control-label col-sm-2">
    <%= f.label :event_title %>
   </div>
   <div class="col-sm-6">
    <%= f.text_field :event_title, class: "form-control", placeholder: "Title of article", autofocus: true %>
   </div>
  </div>
  <div class="form-group">
   <div class="control-label col-sm-2">
    <%= f.label :event_content %>
   </div>
   <div class="col-sm-6">
    <%= f.text_area :event_content, rows: 10, class: "form-control", placeholder: "Limit: 10000 characters" %>
   </div>
  </div>
  <div class="form-group">
   <div class="control-label col-sm-2">
    <%= f.label :from %>
   </div>
   <div class="col-sm-6">
    <%= f.text_area :date_from, rows: 1, class: "form-control", placeholder: "MM/DD/YYYY" %>
   </div>
  </div>
  <div class="form-group">
   <div class="control-label col-sm-2">
    <%= f.label :to %>
   </div>
   <div class="col-sm-6">
    <%= f.text_area :date_to, rows: 1, class: "form-control", placeholder: "MM/DD/YYYY" %>
   </div>
  </div>
  <div class="form-group">
   <div class="col-sm-offset-2 col-sm-10">
    <%= f.submit class: 'btn btn-primary btn-large' %>
   </div>
  </div>
<% end %>
 </div>
</div>