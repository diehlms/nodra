<h1>Create an Article</h1>
<%= form_for @article do |f| %>
    <p>
        <%= f.label :title %>
        <%= f.text_field :title %>
    </p>
    <p>
        <%= f.label :description %><br>
        <%= f.text_area :description %>
    </p>
    <p>
        <%= f.submit %>
    </p>
    <%= render 'layouts/errors', obj: @article%>
<% end %>
<%= link_to 'Back', articles_path %>
<%= render 'form' %>