<%= render 'layouts/userportal' %>
<h2 align="center"><%= @article.title %></h2>
<div class="row">
    <div class="well col-xs-8 col-xs-offset-2">
        <small>Created by: <%= @article.user.username if @article.user %>,
        <%= time_ago_in_words(@article.created_at) %> ago</small>
        <hr>
        <%= simple_format(@article.description) %>
        <%= link_to "Add Comment", new_comment_path(article_id: @article.id) %>
    </div>
</div>
<div class="comments">
    <h3><% @article.comments.each do |c| %> </h3> 
            <h4>Comment</h4>
            <h5>From - <%= c.user.username %></h5>

            <h6><%= c.comment %> </h6>

            </br>
            <%= link_to("Edit Comment", edit_comment_path(c)) %>
            <%= link_to("Delete Comment", comment_path(c), method: :delete) %>
    <% end %>
</div>